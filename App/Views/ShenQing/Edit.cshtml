            <div class="editor-label">
                @Html.LabelFor(model => model.LianXiDianHua)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LianXiDianHua)
                @Html.ValidationMessageFor(model => model.LianXiDianHua)
