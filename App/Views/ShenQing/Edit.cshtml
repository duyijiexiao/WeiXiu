                @Html.ValidationMessageFor(model => model.DaFen) 
            </div>
            <br style="clear: both;" />
            <div class="editor-label">
                @Html.LabelFor(model => model.PingLun)：
            </div>
            <div class="textarea-box">
                @Html.TextAreaFor(model => model.PingLun) 
                @Html.ValidationMessageFor(model => model.PingLun) 
