            <br style="clear: both;" />
            <div class="editor-label">
                @Html.LabelFor(model => model.Remark)：
            </div>
            <div class="textarea-box">
                @Html.TextAreaFor(model => model.Remark) 
                @Html.ValidationMessageFor(model => model.Remark) 
            </div>        
            <div class="editor-label">
                @Html.LabelFor(model => model.State)：
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.State,Models.SysFieldModels.GetSysField("ShenQing","State"),"请选择")
            </div>      
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('HuiYuanId','../../HuiYuan');">
                    @Html.LabelFor(model => model.HuiYuanId) 
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkHuiYuanId">
                        @if(Model!=null)
                        {
                        if (null != Model.HuiYuanId)                      
                        { 
                    <table id="@Model.HuiYuanId"
                        class="deleteStyle">
                        <tr>
                            <td>
                                <img alt="删除"  title="点击删除" onclick="deleteTable('@Model.HuiYuanId ','HuiYuanId');" src="../../../Images/deleteimge.png" />
                            </td>
                            <td>
                                @Model.HuiYuan.Name
                            </td>
                        </tr>
                    </table>
                    }} 
                </div>
                @Html.HiddenFor(model => model.HuiYuanId)
            </div>@Html.HiddenFor(model => model.CreateTime ) @Html.HiddenFor(model => model.CreatePerson )      
            <div class="editor-label">
                @Html.LabelFor(model => model.BiaoShi)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BiaoShi)
                @Html.ValidationMessageFor(model => model.BiaoShi)
