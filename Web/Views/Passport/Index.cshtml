@{
    ViewBag.Title = "找回密码";
}
@{
    Layout = "~/Views/Shared/_LayoutWai.cshtml";
}

<div class="regist_wrap nobg_wrap">
    <div class="wrap">
        <!-- 步骤① begin -->
        <!--找回密码步骤 begin -->
        <div class="find_password_wrap">
            <ul class="clearfix">
                <!--当前的样式是“cur”，当前的前一个样式加“done”,当前的前一个的所有前面的加样式“finished” -->
                <li class="first cur">
                    <i></i><u></u>
                    <b>1</b>填写账户名
                </li>
                <li class="">
                    <i></i>
                    <b>2</b>验证身份
                </li>
                <li class="">
                    <i></i>
                    <b>3</b>设置新密码
                </li>
                <li class="last">
                    <b>4</b>完成
                </li>
            </ul>
        </div>
        <!--找回密码步骤 end -->
        <div class="regist_form fill_name">
            <ul class="clearfix">
                <!--取得焦点的时候给li加class:cur,错误的时候给li加class：cur_error -->
                <li>
                    <div class="form_item">
                        <label>手机号：</label>
                        <input type="text" onblur="checkPhoneOnBlur()" onfocus="    phoneOnFocus('phone')" onkeyup="showoff('phone_desc');" id="phone" value="请输入手机号码" class="ipt gay_text ipt_phone" />
                    </div>
                    <div id="phone_tip" class="tips_box regist_tips">
                        <u></u>
                        请填写正确的手机号码，以便找回密码。
                    </div>
                    <div id="phone_error" class="tips_box regist_tips_error">
                    </div>
                    <div id="phone_desc" class="tips_box username_ok"></div>



                </li>
                <li class="verify_code">
                    <div class="form_item">
                        <label>验证码：</label>
                        <input type="text" maxlength="4" value="" class="ipt gay_text ipt_code" id="vcd" onkeydown="showoff('vcd_desc');">
                        <!--验证码正确-->
                        <span class="code_right"></span>
                        <!--验证码错误-->
                        <span class="code_wrong" id="vcd_desc"></span>
                    </div>
                    <span class="verify_code_box">

                        <img id="valid_code_pic" />
                    </span>
                    <a class="change_code" href="javascript:refresh_valid_code1();">换一张</a>
                </li>
                <li class="regist_btn">
                    <button type="submit" id="login_button" onclick="javascript:confirmUser();return false;">下一步</button>
                </li>
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        refresh_valid_code1();
    })


</script>

